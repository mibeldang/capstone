@model IEnumerable<Icarus.Models.tblRequest>

@{
    ViewBag.Title = "Request Browse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="d-flex mt-2 justify-content-between">
        <input class="form-control col-sm-4" type="search" placeholder="Search" aria-label="Search">
        <div>
            <button class="btn" style="background-color:#4E58A2;color:white;" data-toggle="modal" data-target="#extraLargeModal">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                <span>&nbsp;Add Request</span>
            </button>
        </div>
    </div>
    <hr>
    <div>
        <table class="table table-striped table-hover table-borderless">
            <thead style="background-color: #6C7AE0; color: white;">
                <tr style="font-size: 13px;">
                    <th class="tableheadleft" scope="col">
                        @Html.DisplayNameFor(model => model.IDRequest)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.DateRequest)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.DateNeeded)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.RequestedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Request)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ApproverNotes)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Budget)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ApprovedBy)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.DateApproved)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.DateAcc)
                    </th>
                    <th class="tableheadright" scope="col">
                        @Html.DisplayNameFor(model => model.IDRequestStatus)
                    </th>
                </tr>
            </thead>
            <tbody style="font-size:12px;">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDRequest)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateRequest)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateNeeded)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequestedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Request)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApproverNotes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Budget)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApprovedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateApproved)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateAcc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDRequestStatus)
                        </td>
                    </tr>
            }
                </tbody>
            </table>
    </div>
</div>
<style>
    .tableheadleft {
        border-top-left-radius: 15px;
    }

    .tableheadright {
        border-top-right-radius: 15px;
    }
</style>
