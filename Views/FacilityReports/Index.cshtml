@model IEnumerable<Icarus.Models.tblFacilityReport>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="d-flex mt-2 justify-content-between">
        <input class="form-control col-sm-4" type="search" id="myInput" placeholder="Search" aria-label="Search">
        <div>
            <button class="btn" style="background-color:#4E58A2;color:white;" data-toggle="modal" data-target="#extraLargeModal">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                <span>
                    &nbsp;
                    @Html.ActionLink("Add facility Report", "Create")

                </span>
            </button>
        </div>
    </div>
    <hr>
    <div>
        <table class="table table-striped table-hover table-borderless">
            <thead style="background-color: #6C7AE0; color: white;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ReportDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Activity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PostedBy)
                    </th>
                    <th>Action</th>
                </tr>
                </thead>
            <tbody id="myTable">

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReportDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostedBy)
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm btn-warning">
                                @Html.ActionLink("Edit", "Edit", new { id = item.IDFacilityReport })

                            </button>
                            <button type="button" class="btn btn-sm btn-danger">
                                @Html.ActionLink("Delete", "Delete", new { id = item.IDFacilityReport })


                            </button>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
</div>
    <script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
    </script>