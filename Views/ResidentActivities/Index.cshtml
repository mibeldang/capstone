@model IEnumerable<Icarus.Models.tblResidentActivity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <div class="d-flex mt-2 justify-content-between">
        <input class="form-control col-sm-4" type="search" placeholder="Search" aria-label="Search">
        <div>
            <button class="btn" style="background-color:#4E58A2;color:white;" data-toggle="modal" data-target="#extraLargeModal">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                <span>
                    &nbsp;
                    @Html.ActionLink("New Resident Activity", "Create")

                </span>
            </button>
        </div>
    </div>
    <hr>
    <div>
        <table class="table table-striped table-hover table-borderless">
            <thead style="background-color: #6C7AE0; color: white;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LogDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IDAdmission)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Position)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Activity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PostedBy)
                    </th>
                    <th>Action</th>
                </tr>
                </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LogDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDAdmission)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Position)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostedBy)
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm btn btn-warning">
                                @Html.ActionLink("Edit", "Edit", new { id = item.IDResidentActivityLog })

                            </button>
                            <button type="button" class="btn btn-sm btn btn-danger">
                                @Html.ActionLink("Delete", "Delete", new { id = item.IDResidentActivityLog })

                            </button>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        </div>
    </div>

