@model IEnumerable<Icarus.Models.tblInquiry>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="d-flex mt-2 justify-content-between">
        <input class="form-control col-sm-4" type="search" placeholder="Search" aria-label="Search">
        <div>
            <button class="btn" style="background-color:#4E58A2;color:white;" data-toggle="modal" data-target="#extraLargeModal">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                <span>&nbsp;Add Inquiry</span>
            </button>
        </div>
    </div>
    <hr>
    <div>
        <table class="table table-striped table-hover table-borderless">
            <thead style="background-color: #6C7AE0; color: white;">
                <tr>
                    <th class="tableheadleft" scope="col">
                        @Html.DisplayNameFor(model => model.IDInquiry)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.InquiryDate)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Codep)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ContactNo)
                    </th>
                    <th  scope="col">
                        @Html.DisplayNameFor(model => model.IDInquiryStatus)
                    </th>
                    <th class="tableheadright" scope="col">
                        @Html.DisplayNameFor(model => model.FollowupOn)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td scope="row">
                            <a href="">@Html.DisplayFor(modelItem => item.IDInquiry)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InquiryDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codep)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDInquiryStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FollowupOn)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    .tableheadleft {
        border-top-left-radius: 15px;
    }

    .tableheadright {
        border-top-right-radius: 15px;
    }
</style>

