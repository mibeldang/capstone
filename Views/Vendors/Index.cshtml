@model IEnumerable<Icarus.Models.tblVendor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="d-flex mt-2 justify-content-between">
        <input class="form-control col-sm-4" type="search" placeholder="Search" aria-label="Search">
        <div>
            <button class="btn" style="background-color:#4E58A2;color:white;" data-toggle="modal" data-target="#extraLargeModal">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                <span>&nbsp;Add Vendor</span>
            </button>
        </div>
    </div>
    <hr>  
    <div>
        <table class="table table-striped table-hover table-borderless">
            <thead style="background-color: #6C7AE0; color: white;">
                <tr>
                    <th class="tableheadleft" scope="col">
                        @Html.DisplayNameFor(model => model.IDVendor)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Vendor)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ContactPerson)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ContactNumber)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.TIN)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Notes)
                    </th>
                    <th class="tableheadright" scope="col">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    
                </tr>
            </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td scope="row">
                            <a href="">@Html.DisplayFor(modelItem => item.IDVendor)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vendor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactPerson)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TIN)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Notes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                    </tr>
                }
        </table>
    </div>
</div>
<style>
    .tableheadleft {
        border-top-left-radius: 15px;
    }

    .tableheadright {
        border-top-right-radius: 15px;
    }
</style>
